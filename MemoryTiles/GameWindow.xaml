<Window x:Class="MemoryTiles.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Window" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Name="NewGame" Content="New Game" Click="NewGame_Click" Margin="10" />
            <Button Name="CustomGameButton" Content="Custom Game" Click="CustomGameButton_Click" Margin="10"/>
            <Button Name="LoadGame" Content="Load Game" Click="LoadGame_Click" Margin="10" />
            <Button Name="Statistics" Content="Statistics" Click="Statistics_Click" Margin="10" />
            <Button Name="About" Content="About" Click="About_Click" Margin="10" />
            <Button Name="Exit" Content="Exit" Click="Exit_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
